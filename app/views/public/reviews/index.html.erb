<section class="review-index container">
  <h3 class="section-ttl">レビュー一覧</h3>
  <div class="container">
    <div class="row">
      <% @reviews.each do |review| %>
        <div class="col-md-4">
          <%= render "public/reviews/review_user_profile" %>
          ユーザーID <%= link_to admin_user_path(review.user.id) do %>
            <%= review.user_id %><br>
          <% end %>
          <strong><%= review.score.name %> / <%= review.score.artist %></strong><br>
          <%= render "public/reviews/review_show_star" %>
          <p>レビュー内容：
            <%= link_to score_review_path(review.score.id, review.id) do %>
              <%= review.body %>
          </p>
            <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>