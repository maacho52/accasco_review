<section class="inner">
  <h3 class="section-ttl">レビュー編集</h3>
  <div class="row">
    <div class="col">
      <%= image_tag @user.get_image, class: "user-profile-image" %>
    </div>

    <%= form_with model:@review, url: score_review_path(@review) do |f| %>
      <div class="col">
        <table class="review_edit">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :star %></td>
              <td><%= f.hidden_field :star, value: @review.star %></td>
              <!--☆評価の表示方法やり直す -->
            </tr>
            <tr>
              <td><%= @review.title %></td>
              <td><%= f.hidden_field :title, value: @review.title %></td>
            </tr>

            <tr>
              <td><%= f.label :body %></td>
              <td><%= f.text_area :body, value: @review.body %></td>
            </tr>

          </tbody>
        </table>
        <div class="d-flex justify-content-center">
          <%= f.submit "変更を保存", class: "btn btn-sm btn-success mr-3" %>
          <%= link_to "削除する", score_review_path(@review), method: :delete, data: {confirm: "本当に削除しますか?", class: "btn btn-sm btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</section>