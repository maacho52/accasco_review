<section class="review-show container">
  <h3 class="review-show-heading">
    レビュー詳細
  </h3>
  <div class="row score_info">
    <div class="col-md-3 d-flex justify-content-center mb-5">
      <%= render 'public/scores/image_link', score: @score %>
    </div>
    <div class="col-md-9">
      <h4 class="ml-2 mb-5"><%= @score.name %> / <%= @score.artist %></h4>
       <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info">購入サイト</span><%= @score.site.name %>
      <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info">構成人数</span><%= @score.member_i18n %>
      <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info">難易度</span><%= @score.difficulty_i18n %>
      <% if @score.arranges.present? %>
        <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info">アレンジ内容</span>
      <% end %>
      <% @score.arranges.each do |arrange| %>
        <%= arrange.body %>
      <% end %>
    </div>
  </div>
  <div class="row mb-5">
      <div class="review_info col-md-3 text-center">
          <% if @review.user.profile_image.attached? %>
            <%= image_tag @review.user.profile_image, size: "50×50", class: "user-profile-image-show" %><br>
          <% else %>
            <%= image_tag "no_image.jpg", class: "user-profile-image" %><br>
          <% end %>
          <%= @review.user.nickname %>
      </div>
        <div class="col-md-9">
            <span id="score_review_star_<%= @review.id %>"></span><br>
            <script>
              // $('#star').empty();
                  raty(document.querySelector('#score_review_star_<%= @review.id %>'), {
                    size     : 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',

                    score: <%= @review.star %>,
                    readOnly: true
                  });
            </script>
            <%= link_to score_review_path(@score, @review) do %>
              <%= @review.title %><br>
            <% end %>
              <%= @review.body %>

          <% if @review.user_id == current_user.id %>
            <div class="button">
              <%= link_to "編集する", edit_score_review_path(@review.score_id, @review), class: "btn btn-sm btn-success" %>
            </div>
          <% end %>
        </div>
  </div>
  <h4 class="comments-index-heading ml-5">コメント一覧</h4>
  <div class="d-flex row mb-5">
    <% @review.comments.each do |comment| %>
      <div class="col-md-4 mb-3">
        <% if comment.user.profile_image.attached? %>
          <%= image_tag comment.user.profile_image, class: "user-profile-image" %>
        <% else %>
          <%= image_tag "no_image.jpg", class: "user-profile-image" %>
        <% end %>  
        <%= comment.body %>
      </div>
    <% end %>
  </div>

  <div class="row">
    <div class="col text-center">
      <%= link_to "コメントを投稿する", new_score_review_comment_path(@score, @review), class: "btn btn-sm btn-outline-info" %>
    </div>
  </div>
</section>