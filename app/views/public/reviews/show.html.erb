<section class="review-show">
  <div class="container">
    <h3 class="review-show-heading">レビュー詳細</h3>
    <div  class="row">
      <div class="col">
        <%= image_tag @user.get_image, class: "user-profile-image" %><br>
        <%= @user.nickname %>
      </div>
    </div>
    
    <div class="row">
      <div class="col">
        <tale class="review-show">
          <thead>
        
          </thead>
          <tbody>
            <tr>
              <td>
                <%= @review.star %>
              </td>
            </tr>
            <tr>
              <td>
                <%= link_to score_review_path(@review), do %>
                  <%= @review.title %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td>
                <%= @review.body %>
              </td>
            </tr>
          </tbody>
        </tale>
        <div class="button d-flex justify-content-center">
          <%= link_to "編集する", edit_score_review_path(@review), class: "btn btn-success" %>
        </div>
        
      </div>
    </div>
  </div>
</section>