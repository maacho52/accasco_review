<section class="inner">
  <h2 class="section-ttl">アカウントをお持ちの方はこちらからログイン</h2>
  <% if flash[:danger] %>
    <p class="text-red"><%= flash[:danger] %></p>
  <% end %>

    <div class="rogin-filed d-flex justify-content-center">
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
        <div class="field mb2">
          <%= f.label 'メールアドレス', class: "user-login" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb2">
          <%= f.label 'パスワード', class: "user-login" %>
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>

    <h2 class="section-ttl">登録がお済みでない方</h2>
    <p><%= link_to "こちら", new_user_registration_path, class: "underline" %>から新規登録を行なってください。</p>
</section>
