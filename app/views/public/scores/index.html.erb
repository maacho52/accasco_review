<section class="wrapper flex">
  <div class="content">
    <% if params[:sites_id] %>
      <h3 class="section-ttl">楽譜一覧 (全<%= @all_scores_count %>件)</h3>
    <% else %>
      <h3 class="section-ttl">楽譜一覧 (全<%= @all_scores_count %>件)</h3>
    <% end %>
      <div class="scores">
        <% @scores.each do |score| %>
          <%= link_to score_path(score) do %>
            <%= image_tag score.get_image, format: "jpeg", fallback: "no-image.png" %>
            <h5><%= score.name %></h5>
            <p><%= score.artist %></p>
          <% end %>
          <!--タグの表示 -->
          <% score.arranges.each do |arrange| %>
            <%= arrange.body %>
          <% end %>
        <% end %>
      </div>
      <%= paginate @scores %>
  </div>
</section>