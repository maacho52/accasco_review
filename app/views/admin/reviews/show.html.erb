<section class="admin-review-show container">
  <h3 class="section-ttl">レビュー詳細</h3>
    <div class="row">
      <div class="col-md-2"></div>
      <div class="col-md-2">
        <%= render "public/reviews/review_user_profile", review: @review %>
        ID <%= @review.user.id %>
      </div>
      <div class="col-md-6 mb-4">
        <div class="review_star mb-4">
          <%= render "public/reviews/review_show_star", review: @review %>
            <div class="mb-3">
              <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info font-weight-bold">レビュータイトル</span>
              <span class="text-primary font-weight-bold"><%= @review.title %></span>
            </div>  
            <div class="mt-3">
              <span class="border border-info border-4 rounded-pill mr-2 p-2 bg-info font-weight-bold">レビュー内容</span>
              <span class="text-primary font-weight-bold"><%= @review.body %></span>
            </div>  

        <div class="d-flex justify-content-center mt-5">
          <%= link_to "レビューを削除", admin_score_review_path(score_id: @score, id: @review), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-sm btn-danger" %>
        </div>
        <div class="col-md-2"></div>
      </div>
    </div>
      <div class="d-flex flex-column comments-index", style="height: 150px;">
        <h5><i class="fa-solid fa-comment"><span class="ml-2">コメント</span></i></h5>
        <% @comments.each do |comment| %>
          <div class="flex-fill mb-4">
            ID<%= comment.user_id %>
            <%= comment.body %>
            <%= link_to "コメントを削除する", admin_score_review_comment_path(score_id: comment.review.score.id, review_id: comment.review.id, id: comment.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-sm btn-danger" %>
          </div>
        <% end %>
      </div>
</section>