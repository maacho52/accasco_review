<section class="user-edit">
  <div class="container">
    <h3 class="section-ttl"><%= @user.nickname %>さんの会員情報</h3>
    <div class="row">
        <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
          <table classs="user-show">
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            
            <tbody>
              <tr>
                <th>メールアドレス</th>
                <td><%= @user.email %></td>
              </tr>
              
              <tr>
                <th>生年月日</th>
                <td><%= @user.birthday %></td>
              </tr>
              
              <tr>
                <th>アカペラ歴</th>
                <td><%= @user.experience %></td>
              </tr>
              <tr>
                <th>主な担当パート</th>
                <td>
                  <%=@user.part %>
                </td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <td>
                  <%= f.radio_button :is_deleted, true %>
                  <%= f.label :is_deleted, '退会', value: true %>
                  <%= f.radio_button :is_deleted, false %>
                  <%= f.label :is_deleted, '有効', value: false %><br>                  
                </td>
              </tr>
            </tbody>
          </table>
          <div class="submit-button"><%= f.submit "変更を保存", class: "btn btn-sm btn-success" %></div>
        <% end %>
    </div>
  </div>
</section>