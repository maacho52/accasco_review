<section class="user-edit">
  <div class="container">
    <h3 class="section-ttl"><%= @user.nickname %>さんの会員情報</h3>
    <div class="row">
      <div class="col">
        <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
          <table>
            <thead>
              <tr>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            
            <tbody>
              <tr>
                <td><%= f.label :email, "メールアドレス" %></td>
                <td><%= f.email_field :email, autocomplete: "email", :placeholder =>"#{@user.email}" %></td>
              </tr>
              
              <tr>
                <td><%= f.label :birthday, "生年月日" %></td>
                <td><%= f.date_select :birthday, start_year: 1950, end_year: Time.now.year, include_blank: true, use_two_digit_numbers: true, class: "input-tab birthday-select", :placeholder =>"#{@user.birthday}" %></td></td>
              </tr>
              
              <tr>
                <th><%= f.label :experience, "アカペラ歴" %></th>
                <td><%= f.text_field :experience, autocomplete: "experience", :placeholder => "#{@user.experience}" %></td>
              </tr>
              <tr>
                <th><%= f.label :part, "主な担当パート" %></th>
                <td>
                  <%#= f.check_box :part, id: :users_part, checked:true, :placeholder =>"#{@user.part}", class: "part" %>
                  <%= f.radio_button :part, "lead" %><%= f.label :part_lead, "Lead" %>
                  <%= f.radio_button :part, "top" %><%= f.label :part_top, "Top" %>
                  <%= f.radio_button :part, "chorus2" %><%= f.label :part_chorus2, "2nd" %>
                  <%= f.radio_button :part,  "chorus3" %><%= f.label :part_chorus3, "3rd" %>
                  <%= f.radio_button :part,  "chorus4" %><%= f.label :part_chorus4, "4th" %>
                  <%= f.radio_button :part,  "bass" %><%= f.label :part_bass, "Bass" %>
                  <%= f.radio_button :part, "voicepercussion" %><%= f.label :part_voicepercussion, "VoicePercussion" %>
                </td>
              </tr>
              <tr>
                <th>会員ステータス</th>
                <td>
                  <%= f.radio_button :is_deleted, true %>
                  <%= f.label :is_deleted, '退会', value: true %>
                  <%= f.radio_button :is_deleted, false %>
                  <%= f.label :is_deleted, '有効', value: false %><br>                  
                </td>
              </tr>
            </tbody>
          </table>
          <div class="submit-button"><%= f.submit "変更を保存", class: "btn btn-sm btn-success" %></div>
        <% end %>
      </div>
    </div>
  </div>
</section>