<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th class="font-weight-bold">ニックネーム</th>
            <th class="font-weight-bold">メールアドレス</th>
            <th class="font-weight-bold">ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= link_to user.nickname, admin_user_path(user.id) %></td>
              <td><%= user.email %></td>
              <% if user.is_deleted == true %>
                <td class="font-weight-bold text-secnodary">退会</td>
              <% else %>
                <td class="font-weight-bold text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @users %>
    </div>
  </div>
</div>